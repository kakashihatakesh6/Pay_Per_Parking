<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/relLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgBlueBg"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="fitStart"
                            app:srcCompat="@drawable/top_background"
                            tools:ignore="ImageContrastCheck" />

                        <ImageView
                            android:id="@+id/imgProfileImage"
                            android:layout_width="200dp"
                            android:layout_height="180dp"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="80dp"
                            app:srcCompat="@drawable/profileimg" />


                        <TextView
                            android:id="@+id/txtProfileName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgProfileImage"
                            android:layout_centerHorizontal="true"
                            android:padding="4dp"
                            android:text="User Zero"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtProfileEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtProfileName"
                            android:layout_centerHorizontal="true"
                            android:padding="4dp"
                            android:text="example@gmail.com"
                            android:textSize="18sp" />

                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/llMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/relLayout2"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:id="@+id/rlAccountSettings"
                            android:background="@drawable/background_top_white">

                            <ImageView
                                android:id="@+id/imgAccountSettings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                app:srcCompat="@drawable/ic_1" />

                            <TextView
                                android:id="@+id/txtAccountSettings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="24dp"
                                android:layout_toRightOf="@id/imgAccountSettings"
                                android:text="Account Settings"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@drawable/background_top_white">

                            <ImageView
                                android:id="@+id/imgMyReview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="22dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:padding="2dp"
                                app:srcCompat="@drawable/ic_2" />

                            <TextView
                                android:id="@+id/txtMyReview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="30dp"
                                android:layout_toRightOf="@id/imgMyReview"
                                android:text="My Review"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@drawable/background_top_white">


                            <ImageView
                                android:id="@+id/imgNortification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="22dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:padding="2dp"
                                app:srcCompat="@drawable/ic_4" />

                            <TextView
                                android:id="@+id/txtNortification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="36dp"
                                android:layout_toRightOf="@+id/imgNortification"
                                android:text="Nortification"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@drawable/background_top_white">

                            <ImageView
                                android:id="@+id/imgHelp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="22dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                app:srcCompat="@drawable/ic_2" />

                            <TextView
                                android:id="@+id/txtHelp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="30dp"
                                android:layout_toRightOf="@+id/imgHelp"
                                android:text="24X7 Help &amp; Support"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/btnBackToHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_background"
            android:text="Back To Home"
            android:textSize="18sp" />

    </RelativeLayout>


</FrameLayout>